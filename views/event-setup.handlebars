<div class="main_body card">
  <div class="event-container">

    <h3 class="font-weight-bold text-justify">New Event</h3>
    <form class="w-100 pb-4 event_new_form">

      <div class="form-group row w-100">
        <div class="col-sm-3">
          <label for="event-input">Event Name</label>
        </div>
        <input type="text" id="event-input" class="col-sm-9 form-control" />
      </div>

      <div class="form-group row w-100">
        <div class="col-sm-3">
          <label for="event-location">Location</label>
        </div>
        <input type="text" id="event-location" class="col-sm-9 form-control" />
      </div>

      <div class="form-group row w-100">
        <div class="col-sm-3">
          <label for="event-date">Date</label>
        </div>
        <input type="date" id="event-date" class="col-sm-9 form-control" />
      </div>

      <div class="form-group row w-100">
        <div class="col-sm-3">
          <label for="invite-email">Invitee Emails</label>
        </div>
        <input type="text" id="invite-email" class="col-sm-9 form-control" />
      </div>

      <div class="mt-1">

        <span>Enter the emails of the people you would like to participate in
          the vote.<br />Emails must be separated by a single space.</span>

      </div>

      <div class="mt-3">
        <button type="submit" class="submit-btn pl-3 pr-3 pt-2 pb-2 mb-4">Create
          Event</button>
      </div>

      {{! </section> }}
    </form>
  </div>
</div>

