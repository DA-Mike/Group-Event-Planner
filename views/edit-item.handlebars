<div class="form-container">
  <form class="w-100 pb-4 item_form">
    <div class="form-group row w-100">
      <div class="col-sm-3">
        <label for="item_text">Edit Item</label>
      </div>
      <input
        type="text"
        id="item_text"
        name="item_text"
        class="col-sm-9 form-control"
        value="{{items.item_name}}"
      />
    </div>

    <div class="form-group row">
      <div class="col-sm-6 d-flex justify-content-center">
        <button type="submit" class="w-50 mt-3 submit-btn"> Edit </button>
      </div>
      <div class="col-sm-6 d-flex justify-content-center">
        <button type="submit" class="mt-3 delete-btn submit-btn">
          Delete
        </button>
      </div>
    </div>
  </form>
</div>

<script src="/js/edit-item.js"></script>