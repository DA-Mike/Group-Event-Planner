<div class="event_post">
  <h4 class="event-title"><a
      class="link"
      href="/api/event/{{id}}"
    >{{event_title}}</a></h4>
  <div class="event-body">
    <p class="event-content">
       Created by
        <span class="event-username">{{user.username}}</span>
        on
        {{format_date createdAt}}
      
    </p>
    {{#each items as |item|}}
      <div class="item_list">
        <div class="card-text item-text">
          {{item.item_name}}
        </div>
        <div class="item-author">
          -{{item.user.username}}
        </div>
      </div>
    {{/each}}
    <div class="row">
        <div class="col-sm-12 d-flex justify-content-center">
          <button type="submit" class="mt-3 submit-btn" data-id={{id}}>
            <!-- Add path after edit rout file -->
            <a class="link" href="/api/item/{{id}}">+ new item</a>
          </button>
        </div>
      </div>
  </div>
</div>
<script src="../public/js/add-item.js"></script>
