<div class="main_body card">
  <article class="event_box">
    <div class="event_post">
      <h4 class="event-title"><a
          class="link"
          href="/api/event/{{id}}"
        >{{event_title}}</a>
        {{#if (is_equal user.id user_id)}}
          <button
            type="click"
            class="btn btn-danger d-btn"
            data-id={{id}}
          >Delete Event</button>
        {{/if}}
      </h4>
      <div class="event-body">
        <div class="details-container row col-md-12">
          <p class="event-content col-md-6">
            Location:
            {{event_location}}
            <br />
            Description:
            {{event_description}}
          </p>
          <p class="event-guest col-md-6">
            Created by
            <span class="event-username">{{user.username}}</span>
            on
            {{format_date createdAt}}

          </p>
        </div>
        <h5 class="event-content">Items</h5>
        <div class="item-list-container">
          {{#each items as |item|}}
            <div class="item_list card col-md-2">
              <div class="row">
                <div class="card-text item-text col">
                  {{item.item_name}}
                </div>
                <div class="del-btn col">
                  <button id="del-btn" type="click"><i
                      class="bi bi-x-circle"
                    ></i></button>
                </div>
              </div>
              <div class="row">
                <div class="item-author col">
                  -{{item.user.username}}
                </div>
              </div>
            </div>
          {{/each}}
        </div>
        {{!-- <p class="event-guest">
          Created by
          <span class="event-username">{{user.username}}</span>
          on
          {{format_date createdAt}}

        </p> --}}
      </div>
    </div>
  </article>
  <div class="row">
    <div class="col-sm-12 d-flex justify-content-center">
      <button type="submit" class="mt-3 submit-btn" data-id={{id}}>
        <!-- Add path after edit rout file -->
        <a class="link" href="/api/item/{{id}}">+ new item</a>
      </button>
    </div>

  </div>
</div>
<script src="/js/add-item.js"></script>
{{#if (is_equal user.id user_id)}}
  <script src="/js/delete-event.js"></script>
{{/if}}