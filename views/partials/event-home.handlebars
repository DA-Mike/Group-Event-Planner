<div class="event_post">
  <h4 class="event-title"><a
      class="link"
      href="/api/event/{{id}}"
    >{{event_title}}</a></h4>
  <div class="event-body">
    <p class="event-content">
      Location:
      {{event_location}}
      <br />
      Description:
      {{event_description}}
    </p>
    <p class="event-guest">
      Created by
      <span class="event-username">{{user.username}}</span>
      on
      {{format_date createdAt}}
    </p>
    {{! <p class="event-guest">

    </p> }}
  </div>
</div>