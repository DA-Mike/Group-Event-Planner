<div class="event_post">
  <h4 class="event-title"><a
      class="link"
      href="/event/{{id}}"
    >{{event_title}}</a></h4>
  <div class="event-body">
    <p class="event-content">
       Created by
        <span class="event-username">{{user.username}}</span>
        on
        {{format_date createdAt}}
      </p>
    </p>
    {{#each this}}
      <div class="item_list">
        <div class="card-text item-text">
          {{items.item_name}}
        </div>
        <div class="item-author">
          -{{user.username}},
          {{format_date createdAt}}
        </div>
      </div>
    {{/each}}
   
  </div>
</div>
